function cross(a, b)
  return a[1] * b[2] - a[2] * b[1];
end

function area(points)
  var size = getn(points);
  var s = 0;
  var i = 1;
  var last = points[size];
  while (i < size + 1) do
    s = s + cross(points[i], last);
    last = points[i];
    i = i + 1;
  end
  return s / 2;
end

var point1 = [0, 0];
var point2 = [4, 4];
var point3 = [0, 4];

print(area([point1, point2, point3]));
