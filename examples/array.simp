function cross(a, b)
  return a[1] * b[2] - a[2] * b[1];
end

function area(points)
  var s = 0;
  var last = points[getn(points)];
  each point in points do
    s = s + cross(last, point);
    last = point;
  end
  return s / 2;
end

var point1 = [0, 0];
var point2 = [4, 4];
var point3 = [0, 4];

print(area([point1, point2, point3]));
